<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Candidates</title>
    <link rel="stylesheet" href="/css/dash.css">
</head>
<body>
    <div class="container">
        <!-- Navbar and Sidebar can be included similarly to the dashboard page -->
        
        <!-- Main Content -->
        <div class="main-content">
            <h1>Manage Candidates</h1>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% candidates.forEach(candidate => { %>
                        <tr>
                            <td><%= candidate.id %></td>
                            <td><%= candidate.name %></td>
                            <td>
                                <a href="/admin/updateCandidate/<%= candidate.id %>">Update</a>
                                <a href="/admin/deleteCandidate/<%= candidate.id %>" onclick="return confirm('Are you sure you want to delete this candidate?')">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
