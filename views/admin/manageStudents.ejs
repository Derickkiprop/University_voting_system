<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link rel="stylesheet" href="/css/managestu.css">
</head>
<body>
    <div class="container">
        <!-- Navbar and Sidebar can be included similarly to the dashboard page -->
        
        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <h1>Manage Students</h1>
                <a href="/admin/dashboard" class="btn btn-dashboard">Dashboard</a>
            </div>

            <% if (error) { %>
                <p class="error"><%= error %></p>
            <% } %>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Registration Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student => { %>
                        <tr>
                            <td><%= student.id %></td>
                            <td><%= student.name %></td>
                            <td><%= student.regNo %></td>
                            <td>
                                <form action="/admin/updateStudent/<%= student.id %>" method="GET" style="display:inline;">
                                    <button type="submit" class="btn btn-update">Update</button>
                                </form>
                                <form action="/admin/deleteStudent/<%= student.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this student?')">
                                    <button type="submit" class="btn btn-delete">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
